<Page x:Class="FitnessOsnova_Kam_Dav.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MainPage">

    <Grid Background="#f0f0f0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Добро пожаловать!" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Button Content="Профиль пользователя" Margin="10" Height="40" Click="UserProfileButton_Click"/>
            <Button Content="Тренировки" Margin="10" Height="40" Click="TrainingsButton_Click"/>
            <Button Content="Отзывы" Margin="10" Height="40" Click="FeedbackButton_Click"/>
            <Button Content="Выход" Margin="10" Height="40" Click="LogoutButton_Click"/>
        </StackPanel>
    </Grid>
</Page>