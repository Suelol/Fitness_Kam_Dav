<Page
    x:Class="FitnessOsnova_Kam_Dav.Pages.RegistrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="RegistrationPage">

    <Grid>
        <StackPanel Margin="20">
            <Button
                Width="100"
                Height="30"
                Margin="0,0,0,20"
                Background="#FF4CAF50"
                BorderThickness="0"
                Click="BackButton_Click"
                Content="Назад"
                Cursor="Hand"
                FontWeight="Bold"
                Foreground="White" />

            <TextBlock
                Margin="0,0,0,20"
                FontSize="24"
                Text="Регистрация" />

            <Label Content="Имя:" />
            <TextBox Name="NameTextBox" Margin="0,0,0,10" />

            <Label Content="Логин:" />
            <TextBox Name="LoginTextBox" Margin="0,0,0,10" />

            <Label Content="Пароль:" />
            <PasswordBox Name="PasswordBox" Margin="0,0,0,10" />

            <Label Content="Подтверждение пароля:" />
            <PasswordBox Name="ConfirmPasswordBox" Margin="0,0,0,20" />
            <TextBox x:Name="EmailTextBox" ="Введите электронную почту" />
            <!-- Поле Email -->

            <Button Click="RegisterButton_Click" Content="Зарегистрироваться" />
        </StackPanel>
    </Grid>
</Page>