<Page
    x:Class="FitnessOsnova_Kam_Dav.Pages.AuthPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FitnessOsnova_Kam_Dav.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AuthPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Label
            Margin="50,50,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Email:" />
        <TextBox
            x:Name="EmailTextBox"
            Width="200"
            Margin="150,50,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />

        <Label
            Margin="50,100,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Пароль:" />
        <PasswordBox
            x:Name="PasswordBox"
            Width="200"
            Margin="150,100,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />

        <Button
            Width="100"
            Margin="150,150,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="LoginButton_Click"
            Content="Войти" />
    </Grid>
</Page>
